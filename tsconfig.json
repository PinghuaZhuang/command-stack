{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2022",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "types": [],
    "outDir": "./es",
    // "emitDeclarationOnly": true,
    // "declarationDir": "./types",
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ],
  "include": [
    "typings.d.ts",
    "src/**/*"
  ]
}
